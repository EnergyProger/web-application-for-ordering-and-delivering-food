@model DeliveryFood.Models.Users
@{
    ViewBag.Title = "Register";
}
@if (!User.Identity.IsAuthenticated)
{
    <h2 style="margin-left: 10%;">Реєстрація</h2>

    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal container">
            <hr />
            <div style="margin-left: 40% ;">

                <p style="color: red;">@Session["EmailError"]</p>
                @{ 
                    Session.Remove("EmailError");
                }

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group w-50">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group w-50">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Створити" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    }

    <div style="margin-left: 43% ; margin-bottom: 20px;">
        @Html.ActionLink("Маєте аккаунт? Авторизуйтесь", "Login")
    </div>
}
else
{
    <div style="margin-left: 43% ; margin-bottom: 20px;">
        @Html.ActionLink("Ви зареєстровані", "Index", "Home")
    </div>
}

