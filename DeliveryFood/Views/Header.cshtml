@{
    var category = ViewData["Category"] as IEnumerable<DeliveryFood.Models.Categories>;
    
}

    <div class="navbar-area">
        <div class="main-responsive-nav">
            <div class="container">
                <div class="main-responsive-menu">
                    <div class="logo">
                        <a href="/Home/Index">
                            <img src="~/Img/logo.png" alt="image">
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="main-navbar">
            <div class="container">
                <nav class="navbar navbar-expand-md navbar-light">
                    <a class="navbar-brand" href="/Home/Index">
                        <img src="~/Img/logo.png" alt="image">
                    </a>

                    <div class="collapse navbar-collapse mean-menu" id="navbarSupportedContent">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a href="/Home/Index" class="nav-link">
                                    Головна
                                </a>
                            </li>

                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    Меню
                                    <i class='bx bx-chevron-down'></i>
                                </a>

                                <ul class="dropdown-menu">
                                    @foreach (var i in category)
                                    {
                                        <li class="nav-item">
                                            <a href="/Products/Index/@i.CategoryId" class="nav-link">
                                                @i.Title
                                            </a>
                                        </li>
                                    }

                                </ul>
                            </li>
                            <li class="nav-item">
                                <a href="#contact" class="nav-link">
                                    Контакти
                                </a>
                            </li>
                        </ul>

                        <div class="others-options d-flex align-items-center">


                            <div class="option-item">
                                <div class="cart-btn">
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                    <a href="/Basket/Index">
                                        @*<i class='flaticon-shopping-cart'></i>*@
                                        <i class="fas fa-shopping-cart" style="font-size: 24px" ;></i>
                                        @{ if (ViewBag.SumQuentity > 0)
                                            {
                                                <span>@ViewBag.SumQuentity</span>
                                            }
                                            else
                                            {
                                                <span>0</span>
                                            }
                                        }

                                    </a>
                                    }
                                    else
                                    {
                                        <a href="/Home/Login" style="font-size: 24px; margin-left: 10px;">
                                            <i class="fas fa-shopping-cart"></i>
                                        </a>
                                    }

                                </div>
                            </div>

                            <div class="option-item">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <a href="/Client/Index">Hello,@User.Identity.Name</a>
                                    @*@Html.ActionLink("Logout", "Logout", "Home")*@
                                    <a href="/Home/Logout" style="margin-left: 5px;">Вийти</a>

                                }
                                else
                                {
                                    <a href="/Home/Login" style="font-size: 24px; margin-left: 10px;">
                                        <i class="fas fa-users"></i>
                                    </a>
                                }

                            </div>

                            <!-- <div class="option-item">
                                <form class="search-box">
                                    <input type="text" class="form-control" placeholder="Search">
                                    <button type="submit"><i class="flaticon-search"></i></button>
                                </form>
                            </div> -->
                            <!-- <div class="option-item">
                                <div class="burger-menu">
                                    <span></span>
                                    <span></span>
                                    <span></span>
                                </div>
                            </div> -->
                        </div>
                    </div>
                </nav>
            </div>
        </div>

        <div class="others-option-for-responsive">
            <div class="container">
                <div class="dot-menu">
                    <div class="inner">
                        <div class="circle circle-one"></div>
                        <div class="circle circle-two"></div>
                        <div class="circle circle-three"></div>
                    </div>
                </div>

                <div class="container">
                    <div class="option-inner">
                        <div class="others-options d-flex align-items-center">


                            <div class="option-item">
                                <div class="cart-btn">
                                    <a href="cart.html">
                                        <i class='flaticon-shopping-cart'></i>
                                        <span>0</span>
                                    </a>
                                </div>
                            </div>

                            <div class="option-item">
                                <a href="#" style="font-size: 24px; margin-left: 10px;">
                                    <i class="fas fa-users"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


